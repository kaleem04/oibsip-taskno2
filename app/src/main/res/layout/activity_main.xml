<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtWorking"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="2 + 3"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:paddingRight="30dp"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingRight="30dp"
            android:layout_weight="1"
            android:layout_gravity="end"
            android:gravity="center_vertical"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="50sp" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">


        <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_weight="1"
                android:textColor="@color/red"
            android:textSize="@dimen/CalcButtonTextSize"
            android:onClick="clearOnClick"
                android:text="C"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_weight="1"
                android:textSize="@dimen/CalcButtonTextSize"
                android:textColor="@color/white"
                android:onClick="bracketsOnClick"
                android:text="()"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:text="^"
                android:onClick="powerOnClick"
                android:textSize="@dimen/CalcButtonTextSize"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_weight="1"
                android:textSize="@dimen/CalcButtonTextSize"
                android:textColor="@color/orange"
                android:onClick="divideOnClick"
                android:text="/"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_weight="1"
            android:onClick="sevenOnClick"
            android:textColor="@color/white"
            android:textSize="@dimen/CalcButtonTextSize"
            android:text="7"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_weight="1"
            android:onClick="eightOnClick"
            android:textSize="@dimen/CalcButtonTextSize"
            android:textColor="@color/white"
            android:text="8"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="9"
            android:onClick="nineOnClick"
            android:textSize="@dimen/CalcButtonTextSize"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_weight="1"
            android:onClick="multiplyOnClick"
            android:textSize="@dimen/CalcButtonTextSize"
            android:textColor="@color/orange"
            android:text="X"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:onClick="fourOnClick"
            android:textSize="@dimen/CalcButtonTextSize"
            android:text="4"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_weight="1"
            android:onClick="fiveOnClick"
            android:textSize="@dimen/CalcButtonTextSize"
            android:textColor="@color/white"
            android:text="5"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            android:text="6"
            android:onClick="sixOnClick"
            android:textSize="@dimen/CalcButtonTextSize"
            android:textColor="@color/white" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:layout_weight="1"
            android:onClick="minusOnClick"
            android:textSize="@dimen/CalcButtonTextSize"
            android:textColor="@color/orange"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:onClick="oneOnClick"
            android:textSize="@dimen/CalcButtonTextSize"
            android:text="1"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:onClick="twoOnClick"
            android:layout_weight="1"
            android:textSize="@dimen/CalcButtonTextSize"
            android:textColor="@color/white"
            android:text="2"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/black"
            android:onClick="threeOnClick"
            android:text="3"
            android:textSize="@dimen/CalcButtonTextSize"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_weight="1"
            android:onClick="addOnClick"
            android:textSize="@dimen/CalcButtonTextSize"
            android:textColor="@color/orange"
            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="pointOnClick"
            android:text="."
            android:textColor="@color/white"
            android:textSize="@dimen/CalcButtonTextSize" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:onClick="zeroOnClick"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/CalcButtonTextSize" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@color/orange"
            android:onClick="equalOnClick"
            android:text="="
           android:textColor="@color/white"
            android:textSize="50sp" />


    </LinearLayout>




</LinearLayout>
        


